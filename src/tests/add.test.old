const add = (a, b) => {
  return a + b;
};

test('should add two numbers', () => {
  const result = add(3, 4);

  // Insertion
  if (result !== 7) {
    throw new Error(`You added 3 and 4.  The result was ${result}.  Expect 7.`)
  }
});

const addTwoNumbers = (a, b) => a + b;

test('should add two intergers', () => {
  const result = addTwoNumbers(5, 7);
  expect(result).toBe(12);
})

const generateGreeting = (name = 'Anonymous') => `Hello ${name}!`

test('should return greeting from name', () => {
  const result = generateGreeting('Frank');
  expect(result).toBe('Hello Frank!');
});

test('should return greeting with no name', () => {
  const result = generateGreeting();
  expect(result).toBe('Hello Anonymous!');
});
